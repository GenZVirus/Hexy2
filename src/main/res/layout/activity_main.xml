<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <TextView
        android:id="@+id/textViewHexLb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Hex:"
        android:textColor="@color/yellow"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOctOutput" />

    <TextView
        android:id="@+id/textViewHexOutput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"
        android:textSize="24sp"
        android:textColor="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHexLb" />

    <TextView
        android:id="@+id/textViewOctLb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Octal:"
        android:textSize="24sp"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBinOutput" />

    <TextView
        android:id="@+id/textViewOctOutput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"
        android:textColor="@color/yellow"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOctLb" />

    <TextView
        android:id="@+id/textViewBinOutput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"
        android:textSize="24sp"
        android:textColor="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBinLb" />

    <TextView
        android:id="@+id/textViewBinLb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Binary:"
        android:textSize="24sp"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDecOutput" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:alignmentMode="alignBounds"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/imageViewNum9"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:clickable="true"
            android:onClick="onClick"
            android:tag="num9"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/num9_off" />

        <ImageView
            android:id="@+id/imageViewNumE"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:clickable="true"
            android:onClick="onClick"
            android:tag="nume"
            app:layout_column="3"
            app:layout_row="2"
            app:srcCompat="@drawable/nume_off" />

        <ImageView
            android:id="@+id/imageViewNumF"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:clickable="true"
            android:onClick="onClick"
            android:tag="numf"
            app:layout_column="4"
            app:layout_row="2"
            app:srcCompat="@drawable/numf_off" />

        <ImageView
            android:id="@+id/imageViewNum8"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:clickable="true"
            android:onClick="onClick"
            android:tag="num8"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/num8_off" />

        <ImageView
            android:id="@+id/imageViewNum7"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:clickable="true"
            android:onClick="onClick"
            android:tag="num7"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/num7_off" />

        <ImageView
            android:id="@+id/imageViewNum3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:clickable="true"
            android:onClick="onClick"
            android:tag="num3"

            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/num3_off" />

        <ImageView
            android:id="@+id/imageViewNumA"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:clickable="true"
            android:onClick="onClick"
            android:tag="numa"
            app:layout_column="3"
            app:layout_row="0"
            app:srcCompat="@drawable/numa_off" />

        <ImageView
            android:id="@+id/imageViewNumB"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:clickable="true"
            android:onClick="onClick"
            android:tag="numb"
            app:layout_column="4"
            app:layout_row="0"
            app:srcCompat="@drawable/numb_off" />

        <ImageView
            android:id="@+id/imageViewNum2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:clickable="true"
            android:onClick="onClick"
            android:tag="num2"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/num2_off" />

        <ImageView
            android:id="@+id/imageViewNum1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:clickable="true"
            android:onClick="onClick"
            android:tag="num1"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/num1_off" />

        <ImageView
            android:id="@+id/imageViewNum4"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:clickable="true"
            android:onClick="onClick"
            android:tag="num4"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/num4_off" />

        <ImageView
            android:id="@+id/imageViewNum5"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:clickable="true"
            android:onClick="onClick"
            android:tag="num5"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/num5_off" />

        <ImageView
            android:id="@+id/imageViewNum6"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:clickable="true"
            android:onClick="onClick"
            android:tag="num6"
            app:layout_column="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_row="1"
            app:srcCompat="@drawable/num6_off" />

        <ImageView
            android:id="@+id/imageViewNumC"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:clickable="true"
            android:onClick="onClick"
            android:tag="numc"
            app:layout_column="3"
            app:layout_row="1"
            app:srcCompat="@drawable/numc_off" />

        <ImageView
            android:id="@+id/imageViewNumD"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:clickable="true"
            android:onClick="onClick"
            android:tag="numd"
            app:layout_column="4"
            app:layout_row="1"
            app:srcCompat="@drawable/numd_off" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/textViewDecOutput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"
        android:textSize="24sp"
        android:textColor="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDecLb" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewDecBtn"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:clickable="true"
            android:onClick="onClickDec"
            android:tag="dec"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/dec_off" />

        <ImageView
            android:id="@+id/imageViewOctBtn"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:clickable="true"
            android:onClick="onClickOct"
            android:tag="oct"
            app:layout_column="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_row="0"
            app:srcCompat="@drawable/oct_off" />

        <ImageView
            android:id="@+id/imageViewBinBtn"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:clickable="true"
            android:onClick="onClickBin"
            android:tag="bin"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/bin_off" />

        <ImageView
            android:id="@+id/imageViewHexBtn"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:clickable="true"
            android:onClick="onClickHex"
            android:tag="hex"
            app:layout_column="3"
            app:layout_row="0"
            app:srcCompat="@drawable/hex_off" />
    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageViewBS"
            android:layout_width="128dp"
            android:layout_height="64dp"
            android:clickable="true"
            android:onClick="onClick"
            android:tag="bs"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/bs_off" />

        <ImageView
            android:id="@+id/imageViewNum0"
            android:layout_width="192dp"
            android:layout_height="64dp"
            android:clickable="true"
            android:onClick="onClick"
            android:tag="num0"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/num0_off" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/textViewDecLb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Decimal:"
        android:textColor="@color/yellow"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>